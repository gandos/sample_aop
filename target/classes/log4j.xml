<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">  <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">      <layout class="org.apache.log4j.PatternLayout">         <!-- The default pattern: Date Priority [Category] Message\n -->         <param name="ConversionPattern" value="%d %-5p [%c] %m%n"/>      </layout>  </appender>  <category name="com.domain.project">    <priority value="debug"/>  </category>  <root>      <priority value="info"/>      <appender-ref ref="ConsoleAppender"/>  </root></log4j:configuration>